@model GymManagementSystem.Models.Workout

@{
    ViewData["Title"] = "Update";
}

<h1>Update Details for @Model.Type </h1>
<p> created on @Model.CreatedAt.ToShortDateString()</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class=" form-group">
                <label asp-for="Difficulty" class="control-label"></label>
                <select asp-for="Difficulty" class="form-control" />
                <option value="1"> Beginner</option>
                <option value="2">Intermediate</option>
                <option value="3">Advanced</option>
            </div>

            <select>
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </select>
            <div class=" form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}